npm pkg set scripts.start="node server.js"
npm pkg set scripts.dev="nodemon --watch . --ext js,json --exec node server.js"
npm pkg set scripts.lint="eslint ."
npm pkg set scripts.test="jest"
"scripts": {
  "start": "node server.js",
  "dev": "nodemon server.js",
  "test": "echo \"Error: no test specified\" && exit 1"
}
cat << 'EOF' > package.json
{
  "name": "iot-leak-api",
  "version": "1.0.0",
  "description": "API for IoT Water Leak Detection System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "IoT",
    "leak detection",
    "water monitoring"
  ],
  "author": "bonface",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "mongoose": "^8.1.3",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  }
}
EOF
